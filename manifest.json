{
  "manifest_version": 3,
  "name": "ShyHurricane",
  "version": "1.0.0",
  "description": "Forward HTTP traffic to the ShyHurricane MCP server for indexing.",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "localhost"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "shyhurricane-firefox@double16.github.io",
      "strict_min_version": "68.0"
    }
  }
}
